<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="SlidingTheme" parent="AppTheme">
        <!--добавить в root layout android:background="?android:attr/colorBackground"-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@color/secondaryTextColor</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">@color/primaryTextColor</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">@color/primaryColor</item>
        <!--Цвет подсказки в searchView-->
        <item name="android:textColorHint">#808080</item>
    </style>

    <style name="ToolbarTransparent" parent="Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextAppearance">@style/TransparentTitle</item>
    </style>

    <style name="TransparentTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">

    </style>

    <style name="SubHeadersText" parent="android:Widget.TextView">
        <!--<item name="android:textColor">#8C000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>-->
    </style>

    <style name="ItemSingleLineText" parent="android:Widget.TextView">
        <!--<item name="android:textColor">#E6000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>-->
    </style>

</resources>
