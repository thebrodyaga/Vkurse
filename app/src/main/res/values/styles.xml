<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="SlidingTheme" parent="AppTheme">
        <!--добавить в root layout android:background="?android:attr/colorBackground"-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@color/textColorSecondary</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">@color/textColorPrimary</item>
        <!-- Color of the Toolbar -->
        <!--<item name="android:background">@color/primaryColor</item>-->
        <!--Цвет подсказки в searchView-->
        <item name="android:textColorHint">#808080</item>
    </style>

    <style name="ToolbarTransparent" parent="Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextAppearance">@style/TransparentTitle</item>
    </style>

    <style name="TransparentTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">

    </style>

    <style name="SingleLineTextWithDot" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text14sp" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text14spMedium" parent="Text14sp">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text14spMediumAccent" parent="Text14spMedium">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text14spMedium50" parent="Text14spMedium">
        <item name="android:textColor">@color/textColor50</item>
    </style>

    <style name="Text14spRegular" parent="Text14sp">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text14spRegularAccent" parent="Text14spRegular">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text14spRegular50" parent="Text14spRegular">
        <item name="android:textColor">@color/textColor50</item>
    </style>

    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">-7dp</item>
        <item name="android:layout_marginTop">-7dp</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>
