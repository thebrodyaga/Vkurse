<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thebrodyaga.vkurse.ui.fragments.VkListGroupsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        tools:listitem="@layout/item_group" />

    <fragment
        android:id="@+id/searchGroupsFragment"
        android:name="com.thebrodyaga.vkurse.ui.fragments.VkListSearchGroupsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_vk_list_search_groups" />
</LinearLayout>

